<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.SRJB.huliaaaa.groupcalendarproject.ThemesPage">


    <Button
        android:id="@+id/purpletheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/greentheme"
        android:layout_alignStart="@+id/greentheme"
        android:layout_marginBottom="31dp"
        android:elevation="0dp"
        android:onClick="onPurpleClick"
        android:text="Purple Theme"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="47dp" />

    <Button
        android:id="@+id/greentheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="211dp"
        android:onClick="onGreenClick"
        android:text="Green Theme"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="111dp" />

    <Button
        android:id="@+id/yellowbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/greentheme"
        android:layout_below="@+id/purpletheme"
        android:layout_marginTop="78dp"
        android:onClick="onYellowClick"
        android:text="yellow THEME" />
</android.widget.RelativeLayout>

