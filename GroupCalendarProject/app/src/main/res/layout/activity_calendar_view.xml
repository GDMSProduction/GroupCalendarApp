<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huliaaaa.groupcalendarproject.CalendarView"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <com.github.sundeepk.compactcalendarview.CompactCalendarView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/compactcalendar_view"
        android:layout_width="368dp"
        android:layout_height="238dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:visibility="visible"
        app:compactCalendarBackgroundColor="#00e95451"
        app:compactCalendarCurrentDayBackgroundColor="#B71C1C"
        app:compactCalendarCurrentSelectedDayBackgroundColor="#E57373"
        app:compactCalendarMultiEventIndicatorColor="#fff"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarTextColor="#120f0f"
        app:compactCalendarTextSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/createEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/titleTXT"
        android:layout_alignBottom="@+id/titleTXT"
        android:layout_alignEnd="@+id/compactcalendar_view"
        android:onClick="onBTNClick2"
        android:text="Create Event"
        android:visibility="visible"
        tools:layout_editor_absoluteX="252dp"
        tools:layout_editor_absoluteY="255dp" />

    <EditText
        android:id="@+id/titleTXT"
        android:layout_width="123dp"
        android:layout_height="46dp"
        android:layout_alignStart="@+id/timeTXT"
        android:layout_below="@+id/compactcalendar_view"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="none"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="265dp" />

    <EditText
        android:id="@+id/descriptionTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/createEvent"
        android:layout_below="@+id/createEvent"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Event Description"
        android:inputType="textMultiLine"
        android:visibility="invisible" />

    <Button
        android:id="@+id/addBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/dateTXT"
        android:layout_below="@+id/dateTXT"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="17dp"
        android:onClick="onBtnClick3"
        android:text="Add"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/dateTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/titleTXT"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/createEvent"
        android:layout_toStartOf="@+id/descriptionTXT"
        android:ems="10"
        android:inputType="textMultiLine"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/eventList"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/compactcalendar_view"
        android:layout_marginTop="13dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/titlebox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/textView14"
        android:text="TextView"
        android:textSize="25sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/compactcalendar_view"
        android:layout_alignTop="@+id/datetimeBox"
        android:text="Date/Time:"
        android:textSize="23sp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/datetimeBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView14"
        android:layout_alignEnd="@+id/compactcalendar_view"
        android:layout_marginBottom="16dp"
        android:contextClickable="false"
        android:editable="false"
        android:ems="10"
        android:inputType="textMultiLine"
        android:visibility="invisible"
        tools:clickable="false" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/titleTXT"
        android:layout_alignStart="@+id/compactcalendar_view"
        android:layout_marginBottom="31dp"
        android:text="Description:"
        android:textSize="23sp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/descriptionBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/compactcalendar_view"
        android:layout_alignTop="@+id/textView14"
        android:ems="10"
        android:inputType="textMultiLine"
        android:visibility="invisible" />

    <Button
        android:id="@+id/editBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/createEvent"
        android:layout_below="@+id/descriptionTXT"
        android:layout_marginStart="14dp"
        android:layout_marginTop="11dp"
        android:text="Edit"
        android:visibility="invisible" />

</android.widget.RelativeLayout>
