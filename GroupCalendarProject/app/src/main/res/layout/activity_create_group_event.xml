<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.SRJB.huliaaaa.groupcalendarproject.CreateGroupEvent">

    <RadioButton
        android:id="@+id/pickdate_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/title_text2"
        android:layout_below="@+id/title_text2"
        android:layout_marginTop="20dp"
        android:text="Pick Date" />

    <TextView
        android:id="@+id/neweventTxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Event"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/title_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        android:layout_below="@+id/neweventTxt2"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:id="@+id/picktime_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Time"
        android:layout_below="@+id/datepickd2"
        android:layout_alignStart="@+id/pickdate_btn2" />

    <EditText
        android:id="@+id/timepickd2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:visibility="visible"
        android:layout_alignBaseline="@+id/picktime_btn2"
        android:layout_alignBottom="@+id/picktime_btn2"
        android:layout_alignStart="@+id/datepickd2" />

    <EditText
        android:id="@+id/datepickd2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:visibility="visible"
        android:layout_alignBaseline="@+id/pickdate_btn2"
        android:layout_alignBottom="@+id/pickdate_btn2"
        android:layout_alignEnd="@+id/title_text2" />

    <Button
        android:id="@+id/add_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_alignBaseline="@+id/ok12"
        android:layout_alignBottom="@+id/ok12"
        android:layout_centerHorizontal="true" />

    <DatePicker
        android:id="@+id/groupDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignTop="@+id/neweventTxt2"
        android:layout_centerHorizontal="true" />

    <TimePicker
        android:id="@+id/groupTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignTop="@+id/neweventTxt2"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/friendsToInvite2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/noDes_checkbox2"
        android:layout_alignEnd="@+id/pickColorBtn2"
        android:layout_below="@+id/textView92" />

    <EditText
        android:id="@+id/colorpickd2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:visibility="visible"
        android:layout_below="@+id/timepickd2"
        android:layout_alignStart="@+id/timepickd2" />

    <EditText
        android:id="@+id/des_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:layout_below="@+id/groupTimePicker"
        android:layout_toStartOf="@+id/noDes_checkbox2"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/ok12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/add_btn2"
        android:layout_below="@+id/groupDatePicker"
        android:text="OK" />

    <Button
        android:id="@+id/ok22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ok12"
        android:layout_alignStart="@+id/ok12"
        android:text="OK" />

    <CheckBox
        android:id="@+id/noDes_checkbox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Description"
        android:layout_alignBaseline="@+id/des_txt2"
        android:layout_alignBottom="@+id/des_txt2"
        android:layout_toEndOf="@+id/add_btn2" />

    <RadioButton
        android:id="@+id/pickColorBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Color"
        android:layout_alignBaseline="@+id/colorpickd2"
        android:layout_alignBottom="@+id/colorpickd2"
        android:layout_alignStart="@+id/picktime_btn2" />

    <CheckBox
        android:id="@+id/redBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/groupDatePicker"
        android:layout_below="@+id/colorpickd2"
        android:text="Red" />

    <CheckBox
        android:id="@+id/cyanBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colorpickd2"
        android:layout_toEndOf="@+id/redBox2"
        android:text="Cyan" />

    <CheckBox
        android:id="@+id/magentaBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cyanBox2"
        android:layout_alignBottom="@+id/cyanBox2"
        android:layout_toEndOf="@+id/cyanBox2"
        android:text="Magenta" />

    <CheckBox
        android:id="@+id/greenBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/magentaBox2"
        android:layout_alignBottom="@+id/magentaBox2"
        android:layout_toEndOf="@+id/magentaBox2"
        android:text="Green" />

    <CheckBox
        android:id="@+id/yellowBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colorpickd2"
        android:layout_toEndOf="@+id/greenBox2"
        android:text="Yellow" />

    <ListView
        android:id="@+id/friendsInvited2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/colorpickd2"
        android:layout_alignEnd="@+id/noDes_checkbox2"
        android:layout_above="@+id/noDes_checkbox2"
        android:layout_below="@+id/textView102" />

    <TextView
        android:id="@+id/textView92"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who to invite?"
        android:textAlignment="center"
        android:layout_below="@+id/redBox2"
        android:layout_alignStart="@+id/groupDatePicker" />

    <TextView
        android:id="@+id/textView102"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/friendsToInvite2"
        android:layout_toEndOf="@+id/neweventTxt2"
        android:text="Invited:" />
</android.widget.RelativeLayout>
