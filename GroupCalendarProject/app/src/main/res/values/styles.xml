<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_grey</item>
        <item name="android:textColorSecondary">@color/off_white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTh3me" parent="AppTheme" >
        <item name="android:textColorPrimary">?attr/colorAccent</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/color_grey</item>
        <item name="android:colorBackground">?android:attr/colorPrimaryDark</item>
        <item name="android:colorForeground">@color/foreground_material_dark</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
    </style>

    <style name="the" parent="MyTh3me" />

</resources>
