<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.SRJB.huliaaaa.groupcalendarproject">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/TestTheme1"
        android:screenOrientation="portrait">

        <activity android:name=".LoginPage"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".CalendarPage"
            android:screenOrientation="portrait"/>



        <activity android:name=".FriendsPage"
            android:screenOrientation="portrait"/>



        <activity android:name=".MainMenu"
            android:screenOrientation="portrait"/>



        <activity android:name=".SettingsPage"
            android:screenOrientation="portrait"/>



        <activity android:name=".MyCalendars"
            android:screenOrientation="portrait"/>



        <activity android:name=".ThemesPage"
            android:screenOrientation="portrait"/>



        <activity android:name=".CalendarView"
            android:screenOrientation="portrait"/>



        <activity android:name=".CreateEvent"
            android:screenOrientation="portrait"/>



        <activity android:name=".GroupCalendars"
            android:screenOrientation="portrait"/>



        <activity android:name=".AddFriendsToGroupCalendar"
            android:screenOrientation="portrait"/>



        <activity android:name=".GroupCalendarView"
            android:screenOrientation="portrait"/>



        <activity android:name=".CreateGroupEvent"
            android:screenOrientation="portrait"/>



        <activity android:name=".EditEvent"
            android:screenOrientation="portrait"/>



    </application>

</manifest>